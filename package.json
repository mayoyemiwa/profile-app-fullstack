{
  "name": "profile-app",
  "version": "1.0.0",
  "description": "setting up profile with a profile picture",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "profile-app-install": "npm install --prefix profile-app",
    "server": "nodemon server.js",
    "profile-app": "npm start --prefix profile-app",
    "server-install": "npm install",
    "install-all": "concurrently \"npm run server-install\" \"npm run profile-app-install\"",
    "dev": "concurrently \"npm run server\" \"npm run profile-app\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix profile-app && npm run build --prefix profile-app"
  },
  "author": "Mayowa <mayoyemiwa@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cloudinary": "^1.30.1",
    "concurrently": "^7.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "googleapis": "^107.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.5.4",
    "nodemailer": "^6.7.8",
    "nodemon": "^2.0.19",
    "socket.io": "^4.5.2",
    "validator": "^13.7.0"
  },
  "engines": {
    "node": "16.12.0",
    "npm": "7.24.2"
  }
}
